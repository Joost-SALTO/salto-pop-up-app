{
    "compilerOptions": {
        "outDir": "artifacts",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "dom",
            "esnext"
        ],
        "sourceMap": false,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "~/*": ["src"]
        }
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "types": [
        "react",
        "react-native",
        "jest"
    ],
    "include": [ "src" ],
    "compileOnSave": false
}
